---
use_default_rules: true

skip_list:
  - role-name
  # must be fixed at later time
  - deprecated-local-action
  - deprecated-command-syntax
  - ignore-errors
  - var-naming

exclude_paths:
  # skip original Playbooks from ansible-oracle
  - ./*yml
  - .github
  - dbhome-conversion
  - group_vars
  - host_vars
  - inventory
  - library
